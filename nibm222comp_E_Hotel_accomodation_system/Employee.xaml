<UserControl x:Class="nibm222comp_E_Hotel_accomodation_system.Employee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:nibm222comp_E_Hotel_accomodation_system"
             mc:Ignorable="d" Background="White" Height="578" Width="952">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Background="#191C3281" Height="630">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="71*"/>
                <ColumnDefinition Width="52*"/>
                <ColumnDefinition Width="52*"/>
                <ColumnDefinition Width="137*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1" HorizontalAlignment="Left" Height="625" Margin="20,28,40,0" VerticalAlignment="Top" Width="426" Background="White" CornerRadius="10,10,10,10" Grid.Column="3" Grid.ColumnSpan="2">
                <Grid Margin="20">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <DockPanel LastChildFill="True" Grid.Row="0">
                        <TabControl Background="White" BorderThickness="0" Padding="5" Width="399" >
                            <TabItem Header="Add Employee" Background="{x:Null}" Margin="-2,-2,-100,0" FontSize="14" FontWeight="Bold">
                                <StackPanel Margin="10">


                                    <TextBlock Text="Employee Id" Margin="0,10,0,5" FontWeight="Normal" FontSize="14" FontFamily="Segoe UI Semibold"/>
                                    <TextBox Name="txtempId" Width="360" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal"/>

                                    <TextBlock Text="Name" Margin="0,10,0,5" FontWeight="Normal" FontSize="14" FontFamily="Segoe UI Semibold"/>
                                    <TextBox Name="txtName" Width="360" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal"/>
                                    <Grid Width="364">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="-10,10,36,10">
                                            <TextBlock Text="Mobile" Margin="0,10,0,5" FontWeight="Normal" FontSize="14" FontFamily="Segoe UI Semibold" Width="135" />
                                            <TextBox x:Name="txtmobile" Width="136" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal" />
                                        </StackPanel>

                                        <StackPanel Margin="168,10,0,10" Grid.ColumnSpan="2">
                                            <TextBlock Text="NIC" Margin="0,10,0,5" FontWeight="Normal" FontSize="14" FontFamily="Segoe UI Semibold" />
                                            <TextBox x:Name="txtNIC" Width="188" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal" />
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="Address" Margin="0,10,0,5" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
                                    <TextBox Name="txtAddress" Width="360" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal"/>

                                    <TextBlock Text="Email" Margin="0,20,0,5" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
                                    <TextBox Name="txtemail" Width="360" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal"/>

                                    <TextBlock Text="Designation" Margin="0,10,0,5" FontWeight="Bold" FontFamily="Segoe UI Semibold" />
                                    <ComboBox Name="designationComboBox" Width="360" Height="30" BorderBrush="#D1D1D1" BorderThickness="1">
                                        <ComboBoxItem Content="Front Desk Receptionist" />
                                        <ComboBoxItem Content="Hotel Manager" />
                                        <ComboBoxItem Content="Housekeeping Staff" />
                                        <ComboBoxItem Content="Concierge" />
                                        <ComboBoxItem Content="Chef" />
                                        <ComboBoxItem Content="Waiter/Waitress" />
                                        <ComboBoxItem Content="Security Officer" />
                                        <ComboBoxItem Content="Maintenance Staff" />
                                    </ComboBox>


                                    <Button Content="Submit" Width="360" Height="45" Margin="0,30,0,0" Background="#FF337CF5" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="Button_Click"/>
                                </StackPanel>
                            </TabItem>

                            <TabItem Header="Update Employee" Margin="99,-2,-175,0" FontSize="16" FontWeight="Bold">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <StackPanel Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Top">

                                        <TextBlock Text="Employee Id" Margin="0,10,0,5" FontSize="14" FontFamily="Segoe UI Semibold"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <TextBox Name="txtUpdateEmpId" Width="250" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal" VerticalContentAlignment="Center"/>
                                            <Button Content="Search" Width="100" Height="27" Margin="10,0,0,0" Background="#FF337CF5" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="Button_Click_1"/>
                                        </StackPanel>


                                        <TextBlock Text="Name" Margin="0,10,0,5" FontWeight="Normal" FontSize="14" FontFamily="Segoe UI Semibold"/>
                                        <TextBox Name="txtUpdateName" Width="360" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal"/>
                                        <Grid Width="367">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Margin="0,10,36,10">
                                                <TextBlock Text="Mobile" Margin="0,10,0,5" FontWeight="Normal" FontSize="14" FontFamily="Segoe UI Semibold" Width="143" />
                                                <TextBox x:Name="txtUpdatemobile" Width="142" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal" />
                                            </StackPanel>

                                            <StackPanel Margin="168,10,0,10" Grid.ColumnSpan="2">
                                                <TextBlock Text="NIC" Margin="0,10,0,5" FontWeight="Normal" FontSize="14" FontFamily="Segoe UI Semibold" />
                                                <TextBox x:Name="txtUpdatenic" Width="194" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal" />
                                            </StackPanel>
                                        </Grid>

                                        <TextBlock Text="Address" Margin="0,10,0,5" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
                                        <TextBox Name="txtUpdateAddress" Width="360" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal"/>

                                        <TextBlock Text="Email" Margin="0,20,0,5" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
                                        <TextBox Name="txtUpdateemail" Width="360" Height="27" BorderBrush="#D1D1D1" BorderThickness="1" FontWeight="Normal"/>

                                        <TextBlock Text="Designation" Margin="0,10,0,5" FontWeight="Bold" FontFamily="Segoe UI Semibold" />
                                        <ComboBox Name="updatedesignationComboBox" Width="360" Height="30" BorderBrush="#D1D1D1" BorderThickness="1">
                                            <ComboBoxItem Content="Front Desk Receptionist" />
                                            <ComboBoxItem Content="Hotel Manager" />
                                            <ComboBoxItem Content="Housekeeping Staff" />
                                            <ComboBoxItem Content="Concierge" />
                                            <ComboBoxItem Content="Chef" />
                                            <ComboBoxItem Content="Waiter/Waitress" />
                                            <ComboBoxItem Content="Security Officer" />
                                            <ComboBoxItem Content="Maintenance Staff" />
                                        </ComboBox>

                                        <Button x:Name="UpdateButton" Content="Update" Width="360" Height="45" Margin="0,20,0,0" Background="#28A745" Foreground="White" BorderThickness="0" FontWeight="Bold" Click="UpdateButton_Click"/>

                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </DockPanel>

                </Grid>
            </Border>
            <Border BorderThickness="1" HorizontalAlignment="Left" Height="900" Margin="18,28,0,0" VerticalAlignment="Top" Width="465" Background="White" CornerRadius="10,10,10,10" Grid.ColumnSpan="3" >
                <Grid Margin="20,20,20,63">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Employee Details" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" 
                      VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,5,0,10" />
                    <Button x:Name="Btn_viewemployee" Content="View Employee" Width="110" Height="21" Background="#66F533BF" 
        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="291,7,0,0" BorderThickness="0" FontFamily="Segoe UI Semibold" Click="Btn_viewemployee_Click"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,50,0,10">
                        <TextBox x:Name="txtSearchEmployee" Width="260" Height="30" Margin="0,0,10,0" 
                     FontSize="14" BorderBrush="#D1D1D1" BorderThickness="1" />
                        <Button x:Name="SearchEmployee2" Content="Search" Width="80" Height="30" Background="#FF337CF5" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Click="SearchEmployee2_Click" />
                    </StackPanel>


                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Height="419" VerticalAlignment="Top">
                        <DataGrid Name="dgEmployeeDetails" AutoGenerateColumns="False" Margin="0,10,0,19" Width="423" Height="399">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Emp ID" Binding="{Binding EmployeeID}" Width="70" />
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="70" />
                                <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="70" />
                                <DataGridTextColumn Header="NIC" Binding="{Binding NIC}" Width="70" />
                                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="150" />
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200" />
                                <DataGridTextColumn Header="Designation" Binding="{Binding Designation}" Width="150" />
                                <DataGridTextColumn Header="Create Date" Binding="{Binding CreateDate}" Width="150" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>

                </Grid>
            </Border>

        </Grid>
    </ScrollViewer>

</UserControl>
