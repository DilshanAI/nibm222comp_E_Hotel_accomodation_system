<UserControl x:Class="nibm222comp_E_Hotel_accomodation_system.EmployeeDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:nibm222comp_E_Hotel_accomodation_system"
                        mc:Ignorable="d" Background="White" Height="578" Width="952">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Background="#191C3281" Height="568">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="71*"/>
                <ColumnDefinition Width="52*"/>
                <ColumnDefinition Width="52*"/>
                <ColumnDefinition Width="137*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1" HorizontalAlignment="Left" Height="550" Margin="18,28,0,0" VerticalAlignment="Top" Width="893" Background="White" CornerRadius="10,10,10,10" Grid.ColumnSpan="4" >
                <Grid Margin="20,20,20,63">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                  
                        <Button x:Name="Btn_back" Content="&lt;&lt; Back" HorizontalAlignment="Left" Height="27" Margin="754,37,0,0" VerticalAlignment="Top" Width="69" Click="Btn_back_Click" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Segoe UI Semibold" FontSize="14"/>
                    
                    <!--<Button x:Name="EmployeeDetails" Content=" << " Width="52" Height="30" Background="White" Foreground="Black"
                        FontWeight="Bold" BorderThickness="0" HorizontalAlignment="Left" Margin="0,2,0,58"  FontSize="25" Click="EmployeeDetails_Click"/>-->
                    <TextBlock Text="Employee Details" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" 
                      VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" />
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,50,0,10">
                        <TextBox x:Name="txtSearchEmployee" Width="260" Height="30" Margin="0,0,10,0" 
                     FontSize="14" BorderBrush="#D1D1D1" BorderThickness="1" />
                        <Button x:Name="SearchEmployee2" Content="Search" Width="80" Height="30" Background="#FF337CF5" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Click="SearchEmployee2_Click" />
                    </StackPanel>


                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                        <DataGrid Name="dgEmployeeDetails" AutoGenerateColumns="False" Margin="0,10,0,19" Width="888" Height="349" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Emp ID" Binding="{Binding EmployeeID}" Width="70" />
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="70" />
                                <DataGridTextColumn Header="Mobile" Binding="{Binding Mobile}" Width="70" />
                                <DataGridTextColumn Header="NIC" Binding="{Binding NIC}" Width="70" />
                                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="150" />
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200" />
                                <DataGridTextColumn Header="Designation" Binding="{Binding Designation}" Width="150" />
                                <DataGridTextColumn Header="Create Date" Binding="{Binding CreateDate}" Width="150" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </ScrollViewer>

                </Grid>
            </Border>


        </Grid>
    </ScrollViewer>
</UserControl>

