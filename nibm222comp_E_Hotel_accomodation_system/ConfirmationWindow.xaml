<Window x:Class="nibm222comp_E_Hotel_accomodation_system.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nibm222comp_E_Hotel_accomodation_system"
        mc:Ignorable="d"
        Title="Confirmation" Height="360" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="White">

    <Grid>
        <Border BorderBrush="Green" BorderThickness="2" CornerRadius="10" Padding="10" Background="White">
            <StackPanel>
                <TextBlock Text="Confirmation" FontSize="22" FontWeight="Bold" Foreground="#FF30A550" HorizontalAlignment="Left" Margin="10,5,0,0"/>
                <TextBlock x:Name="txt_BookingID" Text="Booking ID: B001" FontSize="16" FontWeight="Bold" Margin="267,-24,10,5"/>

                <StackPanel Margin="10">
                    <TextBlock x:Name="txt_BookingDate" Text="Date / Time : " FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock x:Name="txt_CustomerName" Text="Customer Name: " FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txt_CustomerMobile" Text="Mobile: " FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txt_RoomType" Text="Room Type: " FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txt_NoOfPersons" Text="No. of Persons: " FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txt_ReservedDate" Text="Reserved Date: " FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txt_CheckoutDate" Text="Checkout Date: " FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock x:Name="txt_Price" Text="Price: Rs. 0.00" FontSize="16" FontWeight="Bold" Foreground="Red" Margin="0,5,0,0"/>
                </StackPanel>

                <Button Content="Confirm" Background="#FF30A550" Foreground="White" FontSize="16" Height="40" Margin="10" Click="Confirm_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
