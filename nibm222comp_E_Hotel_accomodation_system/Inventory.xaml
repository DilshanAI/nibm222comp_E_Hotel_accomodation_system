<UserControl x:Class="nibm222comp_E_Hotel_accomodation_system.Inventory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:nibm222comp_E_Hotel_accomodation_system"
             mc:Ignorable="d" 
                                       d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid Background="#191C3281">
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="475" Margin="47,26,0,0" VerticalAlignment="Top" Width="870" Background="White" CornerRadius="10,10,10,10">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <TextBlock Text="Manage Inventories" FontSize="20" FontWeight="Bold" Margin="20,10,0,40" Grid.RowSpan="2"/>
                <Button x:Name="Btn_viewi_nventory" Content="View Inventories" Width="140" Height="40" Background="#66F533BF" 
             HorizontalAlignment="Left" VerticalAlignment="Top" Margin="645,3,0,0" BorderThickness="0" FontFamily="Segoe UI Semibold" Click="Btn_viewi_nventory_Click"/>
                <Line X1="20" X2="780" Y1="50" Y2="50" Stroke="Blue" StrokeThickness="2" Width="860"/>

                <Grid Margin="20,60,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Add New Item Section -->
                    <Border BorderThickness="1" Background="White" CornerRadius="10" Padding="20" Grid.Column="0" Margin="10,0,10,-165" BorderBrush="#7F000000" Height="382">
                        <StackPanel>
                            <TextBlock Text="Inventory ID" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Width="316"/>
                            <TextBox Name="txtInventoryId" IsReadOnly="True" Text="I0001" Height="28" FontSize="14" Margin="0,5,0,0" Width="316"/>

                            <TextBlock Text="Room Number" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Margin="0,8,0,0" Width="316"/>
                            <ComboBox Name="cmbRoomNumber" Height="28" FontSize="14" Margin="0,5,0,0" Width="316"/>


                            <TextBlock Text="Inventory Name" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Margin="0,8,0,0" Width="316"/>
                            <TextBox Name="txtInventoryName" Height="28" FontSize="14" Margin="0,5,0,0" Width="316"/>

                            <TextBlock Text="Inventory Type" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Margin="0,8,0,0" Width="316"/>
                            <ComboBox Name="cmbInventoryType" Height="28" FontSize="14" Margin="0,5,0,0" Width="316">
                                <ComboBoxItem Content="Furniture"/>
                                <ComboBoxItem Content="Electronics"/>
                                <ComboBoxItem Content="Appliances"/>
                                <ComboBoxItem Content="Bedding"/>
                                <ComboBoxItem Content="Decor"/>
                                <ComboBoxItem Content="Bathroom Essentials"/>
                                <ComboBoxItem Content="Kitchenware"/>
                                <ComboBoxItem Content="Cleaning Supplies"/>
                                <ComboBoxItem Content="Office Equipment"/>
                                
                            </ComboBox>

                            <TextBlock Text="Quantity" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Margin="0,8,0,0" Width="316"/>
                            <ComboBox Name="cmbQuantity" Height="28" FontSize="14" Margin="0,5,0,0" Width="316">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="6"/>
                            </ComboBox>

                            <Button x:Name="btn_add_item" Content="Add New Item" Background="#337CF5" Foreground="White" Height="40" Width="316" FontSize="14" FontFamily="Segoe UI Semibold" Margin="0,10,0,0" Click="btn_add_item_Click"/>
                        </StackPanel>

                    </Border>

                    <!-- Update Item Section -->
                    <Border BorderThickness="1" Background="White" CornerRadius="10" Padding="20" Grid.Column="1" Margin="10,0,10,-154" BorderBrush="#7F000000">
                        <StackPanel>
                            <TextBlock Text="Inventory ID" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Width="316"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Name="txtUpdateInventoryId" Width="200" Height="28" FontSize="14" Margin="8,5,0,0"/>
                                <Button x:Name="btn_serach_inventory" Content="Search" Background="#337CF5" Foreground="White" Width="85" Margin="10,5,0,0" Click="btn_serach_inventory_Click"/>
                            </StackPanel>

                            <TextBlock Text="Room Number" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Width="316" Margin="0,8,0,0"/>
                            <TextBox Name="txtUpdateRoomNumber" Height="28" FontSize="14" Width="316" Margin="0,5,0,0"/>

                            <TextBlock Text="Inventory Name" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Width="316" Margin="0,8,0,0"/>
                            <TextBox Name="txtUpdateInventoryName" Height="28" FontSize="14" Width="316" Margin="0,5,0,0"/>

                            <TextBlock Text="Inventory Type" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Width="316" Margin="0,8,0,0" />
                            <ComboBox Name="cmbUpdateInventoryType" Height="28" FontSize="14" Width="316" Margin="0,5,0,0">
                                <ComboBoxItem Content="Furniture"/>
                                <ComboBoxItem Content="Electronics"/>
                                <ComboBoxItem Content="Appliances"/>
                                <ComboBoxItem Content="Bedding"/>
                                <ComboBoxItem Content="Decor"/>
                                <ComboBoxItem Content="Bathroom Essentials"/>
                                <ComboBoxItem Content="Kitchenware"/>
                                <ComboBoxItem Content="Cleaning Supplies"/>
                                <ComboBoxItem Content="Office Equipment"/>
                            </ComboBox>

                            <TextBlock Text="Quantity" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Width="316" Margin="0,7,0,0"/>
                            <ComboBox Name="cmbUpdateQuantity" Height="28" FontSize="14" Width="316" Margin="0,5,0,0">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="6"/>
                            </ComboBox>

                            <Button x:Name="btn_update_item" Content="Update Item" Background="#28A745" Foreground="White" Height="40" Width="316" FontSize="14" FontFamily="Segoe UI Semibold" Margin="0,10,0,0" Click="btn_update_item_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>


            </Grid>
        </Border>

    </Grid>
</UserControl>
