<UserControl x:Class="nibm222comp_E_Hotel_accomodation_system.ReserveRoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:nibm222comp_E_Hotel_accomodation_system"
             mc:Ignorable="d" 
                                                d:DesignHeight="450" d:DesignWidth="800" Background="White" Loaded="UserControl_Loaded">
    <Grid Background="#191C3281">
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="477" Margin="52,28,0,0" VerticalAlignment="Top" Width="862" Background="White" CornerRadius="10,10,10,10">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Allocate Room" FontSize="20" FontWeight="Bold" Margin="20,10,0,0"/>


                </StackPanel>
                <Line X1="20" X2="780" Y1="50" Y2="50" Stroke="Blue" StrokeThickness="2" Width="860" Margin="5,0,0,0" Height="53"/>


                <!-- Form Fields -->
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side -->
                    <StackPanel Grid.Column="0" Margin="27,15,10,10">
                        <TextBlock Text="Booking ID" FontWeight="Bold" FontSize="14" FontFamily="Segoe UI Semibold" Margin="5,15,0,0"/>
                        <TextBox x:Name="txt_bookingid" IsReadOnly="True" FontSize="14" Height="28" Margin="-34,13,0,0" Width="328"/>

                        <TextBlock Text="Checkin Date" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="14" Margin="5,19,0,0"/>

                        <TextBlock Text="Checkout Date" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="14" Margin="5,23,0,0"/>


                        <TextBlock Text="Room Type" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="14" Margin="5,23,0,0"/>


                        <TextBlock Text="Bed Type" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="14" Margin="5,23,0,0"/>


                        <TextBlock Text="Room ID" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="14" Margin="5,22,0,0"/>


                        <TextBlock Text="No of People" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="14" Margin="5,22,0,0"/>

                    </StackPanel>

                    <!-- Left Side -->
                    <StackPanel Grid.Column="0" Margin="170,10,20,10">


                        <DatePicker x:Name="dp_reservedate" FontSize="14" Height="28" Margin="-30,94,0,0" Width="190" DisplayDateStart="{x:Static sys:DateTime.Today}" SelectedDateChanged="dp_reservedate_SelectedDateChanged"/>
                        <DatePicker x:Name="dp_checkdate" Height="28" FontSize="14" Margin="-30,13,0,0" Width="190" DisplayDateStart="{x:Static sys:DateTime.Today}" SelectedDateChanged="dp_checkdate_SelectedDateChanged"/>



                        <ComboBox Name="cmbRoomtype" Height="28" FontSize="14" Margin="-30,13,0,0" Width="190" SelectionChanged="cmbRoomtype_SelectionChanged">
                            <ComboBox.Background>
                                <LinearGradientBrush EndPoint="0,1">
                                    <GradientStop Color="#FFF0F0F0"/>
                                    <GradientStop Color="#FF1A1A1A" Offset="1"/>
                                </LinearGradientBrush>
                            </ComboBox.Background>
                        </ComboBox>





                        <ComboBox Name="cmbBedtype" Height="28" FontSize="14" Margin="-30,13,0,0" Width="190" SelectionChanged="cmbBedtype_SelectionChanged"/>




                        <ComboBox Name="cmbroomno" FontSize="14" Height="28" Margin="-30,13,0,0" Width="190" SelectionChanged="cmbroomno_SelectionChanged"/>




                        <ComboBox Name="cmbQuantity" FontSize="14" Height="28" Margin="-30,13,0,0" Width="190">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                            <ComboBoxItem Content="5"/>

                        </ComboBox>


                    </StackPanel>
                    <!-- Right Side -->
                    <StackPanel Grid.Column="1" Margin="30,10,10,10">
                        <TextBlock Text="Customer Mobile" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="14" Margin="12,18,0,0"/>

                        <TextBox x:Name="txt_mobile"  FontSize="14" Margin="-20,15,0,0" Width="328" Height="28" TextChanged="txt_mobile_TextChanged"/>

                        <TextBlock Text="Customer ID" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="14" Margin="12,19,0,0"/>

                        <TextBlock Text="Remark" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="14" Margin="12,23,0,0"/>
                        <TextBox x:Name="txt_remarks" FontSize="14" Width="328" Height="28" Margin="-22,14,0,0" Background="{x:Null}"/>

                        <TextBlock Text="Price" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="14" Margin="12,20,0,0"/>

                        <TextBlock x:Name="txt_price" Foreground="Red" FontSize="16" FontWeight="Bold" Margin="-20,10,0,0" Width="328" Height="28"/>


                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="200,10,10,10">




                        <TextBox x:Name="txt_cusid" FontSize="14" Margin="-51,94,0,0" Width="190" Height="28"/>







                    </StackPanel>

                    <Button x:Name="btn_sumbit" Content="Submit" Background="#2563EB" Foreground="White" FontSize="14" Height="40" Width="330" Margin="40,296,0,46" HorizontalAlignment="Left" Grid.Column="1" FontFamily="Segoe UI Semibold" Click="btn_sumbit_Click"/>

                </Grid>




            </Grid>
        </Border>

    </Grid>
</UserControl>
