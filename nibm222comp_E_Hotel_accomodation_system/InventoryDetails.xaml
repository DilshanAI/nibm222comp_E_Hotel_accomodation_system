<UserControl x:Class="nibm222comp_E_Hotel_accomodation_system.InventoryDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:nibm222comp_E_Hotel_accomodation_system"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">

    <Grid Background="#191C3281">
        <Border BorderThickness="1" HorizontalAlignment="Left" Height="477" Margin="42,28,0,0" VerticalAlignment="Top" Width="894" Background="White" CornerRadius="10,10,10,10">
            <Button x:Name="Btn_back" Content="&lt;&lt; Back" HorizontalAlignment="Left" Height="27" Margin="754,37,0,0" VerticalAlignment="Top" Width="69" Click="Btn_back_Click" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Segoe UI Semibold" FontSize="14"/>
        </Border>

        <!-- Label for Room Details -->
        <TextBlock Text="Inventory Details" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" 
           VerticalAlignment="Top" HorizontalAlignment="Left" Margin="94,64,0,0" />

       
        <!-- Search bar and button -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="250,110,0,0" VerticalAlignment="Top">
            <TextBox x:Name="txtSearch" Width="200" Height="30" FontSize="14" />
            <Button x:Name="btnSearch" Content="Search" Width="80" Height="30" 
                    Margin="10,0,0,0" Background="#3B82F6" Foreground="White" Click="btnSearch_Click_1" />
        </StackPanel>

       

        <DataGrid Name="dgInventoryDetails" AutoGenerateColumns="False" Margin="79,176,94,39">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Inventory ID" Binding="{Binding InventoryID}" Width="*" />
                <DataGridTextColumn Header="Room ID" Binding="{Binding RoomID}" Width="*" />
                <DataGridTextColumn Header="Inventory Name" Binding="{Binding InventoryName}" Width="*" />
                <DataGridTextColumn Header="Inventory Type" Binding="{Binding InventoryType}" Width="*" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="60" />
                <DataGridTextColumn Header="Create Date" Binding="{Binding CreateDate}" Width="*" />
                <DataGridTextColumn Header="Updated Date" Binding="{Binding UpdatedDate}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>


    </Grid>

</UserControl>
