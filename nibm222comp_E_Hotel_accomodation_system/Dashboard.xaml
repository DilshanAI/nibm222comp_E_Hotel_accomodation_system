<Window x:Class="nibm222comp_E_Hotel_accomodation_system.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nibm222comp_E_Hotel_accomodation_system"
        mc:Ignorable="d"
           Title="Dashboard" Height="650" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="1088*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="panelHeader" VerticalAlignment="Top" Height="75" Grid.ColumnSpan="4">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#6C7D7D7D" Offset="1"/>
                    <GradientStop Color="White" Offset="0.917"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="71*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Black &amp; Blue Minimalist Modern Initial Font Logo 1.png" HorizontalAlignment="Left" Height="98" Margin="16,6,0,0" VerticalAlignment="Top" Width="99"/>
            <Image Source="/RIVER GREEN Hotel Accomodation System.png" HorizontalAlignment="Left" Height="56" Margin="120,0,0,0" VerticalAlignment="Center" Width="329"/>
            <StackPanel Width="191" Orientation="Horizontal" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="996,0,0,0"/>

        </Grid>

        <Grid x:Name="sidePanel" Background="#261C3281" HorizontalAlignment="Left" Width="207" Margin="0,75,0,0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="69*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.ColumnSpan="2">
                <ListView x:Name="MenuListView" SelectionMode="Single" 
          ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
          FontFamily="Century Gothic" FontSize="14" Foreground="White" 
          BorderBrush="Transparent" Background="Transparent" 
          FontWeight="Bold" SelectionChanged="MenuListView_SelectionChanged">
                    <ListViewItem x:Name="profile" Height="55" Width="203" MouseDoubleClick="profile_MouseDoubleClick">
                        <ListViewItem.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#7E181819" Offset="1"/>
                                <GradientStop Color="#264464D4" Offset="0.961"/>
                            </LinearGradientBrush>
                        </ListViewItem.Background>
                        <StackPanel Width="177" Orientation="Horizontal" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="14,0,0,0">
                            <Image Source="/Ellipse 17.png" Height="40" Width="40"/>
                            <TextBlock Margin="15 0 0 0" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Bold" Text="Profile" Width="62" Foreground="Black"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="dashboard" Height="55" Background="#FF4464D4" MouseDoubleClick="dashboard_MouseDoubleClick" Tag="/wPerformance Macbook.png">
                        <StackPanel Width="177" HorizontalAlignment="Left" Orientation="Horizontal" Height="50" Margin="17,0,0,0">
                            <Image Source="/Performance Macbook.png" Height="35" Width="35" VerticalAlignment="Center"/>
                            <TextBlock Margin="15 0 0 0" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Normal" Text="Dashbaord" Width="85" Foreground="White"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="rooms" Height="55" Background="#264464D4" MouseDoubleClick="Click_Room">
                        <StackPanel Width="177" HorizontalAlignment="Center" Orientation="Horizontal" Height="50" Margin="16,0,0,0">
                            <Image Source="/Country House.png" Height="35" Width="35" VerticalAlignment="Center"/>
                            <TextBlock Margin="15 0 0 0" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Bold" Text="Room Details" Width="100" Foreground="Black"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="employees" Height="55" MouseDoubleClick="employees_MouseDoubleClick">
                        <ListViewItem.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#7E181819" Offset="1"/>
                                <GradientStop Color="#264464D4" Offset="0.961"/>
                            </LinearGradientBrush>
                        </ListViewItem.Background>
                        <StackPanel Width="177" HorizontalAlignment="Center" Orientation="Horizontal" Height="50" Margin="14,0,0,0">
                            <Image Source="/Manager.png" Height="35" Width="35" VerticalAlignment="Center"/>
                            <TextBlock Margin="15 0 0 0" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Bold" Text="Employee Details" Width="109" Foreground="Black"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="customers" Height="55" MouseDoubleClick="customers_MouseDoubleClick">
                        <ListViewItem.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#7E181819" Offset="1"/>
                                <GradientStop Color="#264464D4" Offset="0.976"/>
                            </LinearGradientBrush>
                        </ListViewItem.Background>
                        <StackPanel Width="177" HorizontalAlignment="Center" Orientation="Horizontal" Height="50" Margin="13,0,0,0">
                            <Image Source="/Customer - Copy.png" Height="35" Width="35" VerticalAlignment="Center"/>
                            <TextBlock Margin="15 0 0 0" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Bold" Text="Customer Details" Width="111" Foreground="Black" FontSize="14"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="inventories" Height="55" Background="#264464D4" MouseDoubleClick="inventories_MouseDoubleClick">
                        <StackPanel Width="177" HorizontalAlignment="Center" Orientation="Horizontal" Height="50" Margin="11,0,0,0">
                            <Image Source="/Sell Stock.png" Height="28" Width="35" VerticalAlignment="Center"/>
                            <TextBlock Margin="15 0 0 0" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Bold" Text="Inventories" Width="100" Foreground="Black"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="reports" Height="55" MouseDoubleClick="reports_MouseDoubleClick">
                        <ListViewItem.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#7E181819" Offset="1"/>
                                <GradientStop Color="#264464D4" Offset="0.957"/>
                            </LinearGradientBrush>
                        </ListViewItem.Background>
                        <StackPanel Width="177" HorizontalAlignment="Center" Orientation="Horizontal" Height="50" Margin="15,0,0,0">
                            <Image Source="/Document.png" Height="35" Width="35" VerticalAlignment="Center"/>
                            <TextBlock Margin="15 0 0 0" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Normal" Text="Reports" Width="100" Foreground="Black"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="RoomReservation" Height="55" MouseDoubleClick="RoomReservation_MouseDoubleClick">
                        <ListViewItem.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#7E181819" Offset="1"/>
                                <GradientStop Color="#264464D4" Offset="0.957"/>
                            </LinearGradientBrush>
                        </ListViewItem.Background>
                        <StackPanel Width="177" HorizontalAlignment="Center" Orientation="Horizontal" Height="50" Margin="16,0,0,0">
                            <Image Source="/Neighbor.png" Height="35" Width="35" VerticalAlignment="Center"/>
                            <TextBlock Margin="15 0 0 0" VerticalAlignment="Center" FontFamily="Bahnschrift SemiLight" FontWeight="Normal" Text="Reserve Room" Width="100" Foreground="Black"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
                <!-- Spacer for alignment -->
                <StackPanel Height="Auto" VerticalAlignment="Bottom" Margin="0,20,0,10">
                    <Button Content="Log Out" Width="150" Height="40" Background="#FF4464D4" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Click="LogoutButton_Click"/>
                </StackPanel>
            </StackPanel>

            <ContentControl Name="ContentArea" BorderBrush="#FF2C1616" Margin="11,0,-991,0" Grid.Column="1">
                <!-- Default content can go here -->
            </ContentControl>

        </Grid>
    </Grid>
</Window>
